{{#if errors}}
<div>
    <div class="errorContainer">
        {{#each errors}}
        <p>{{this}}</p>
        {{/each}}
    </div>
</div>
{{/if}}

<section id="create-container">
    <div class="create-container-info">
        <h1>Create Blog</h1>
        <form action="/blog/create" method="post">
            <label>Title:</label>
            <input name="title" type="text" id="title" value="{{body.title}}">

            <label>Image:</label>
            <input name="image" type="text" id="image" placeholder="http://..." >

            <label>Content:</label>
            <textarea id="content" name="content"></textarea>

            <label>Blog Category:</label>
            <input name="category" type="text" id="category" value="{{body.category}}"">

            <input type="submit" id="btn" value="POST">
        </form>
    </div>
</section>